<section>
  <div class="flex items-center justify-center h-screen">
    <div class="w-full max-w-md mx-auto sm:px-4 md:w-96 md:max-w-sm md:px-0">
      <div class="flex flex-col">
        <div>
          <h2 class="mt-6 text-xl font-medium leading-tight text-black">
            Forgot your password
          </h2>
        </div>
      </div>
      <form action="https://submit-form.com/r4PIGvAB">
        <input
          autocomplete="false"
          name="hidden"
          type="text"
          style="display:none;"
        />
        <input
          type="hidden"
          name="_redirect"
          value="https://jamstacker.studio/thankyou"
        />
        <div class="mt-4 space-y-6">
          <div class="col-span-full">
            <label
              name="email"
              class="block mb-3 text-sm font-medium text-slate-600">
              Your email
            </label>
            <input
              type="email"
              autocomplete="off"
              placeholder="email@example.com"
              class="w-full focus:outline-none focus:ring-accent-500 appearance-none bg-slate-100 block border border-transparent focus:bg-transparent focus:border-accent-500 placeholder-slate-500 px-3 py-3 rounded-lg sm:text-sm text-accent-500"
            />
          </div>
          <div class="col-span-full">
            <button
              type="submit"
              class="items-center text-white focus:outline-none inline-flex justify-center hover:text-accent-500 duration-200 focus-visible:outline-black focus-visible:ring-black font-medium px-6 py-4 rounded-xl text-center w-full bg-accent-500 hover:bg-accent-100">
              Submit your request
            </button>
          </div>
          <div>
            <p class="text-sm font-medium leading-tight text-black">
              Already have a password?
              <a
                class="text-accent-500 hover:text-accent-400 ml-3"
                href="/login">
                Log in instead
              </a>
            </p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
