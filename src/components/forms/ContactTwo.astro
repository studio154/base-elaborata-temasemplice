<section class="relative overflow-hidden">
  <div
    class="relative items-center w-full px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl lg:py-24">
    <div class="text-center">
      <span
        class="bg-accent-50/50 border border-white/50 backdrop-blur-2xl rounded-full py-2 px-4 w-auto">
        <span class="text-sm text-accent-500 uppercase font-semibold"
          >Support</span
        >
      </span>
      <p
        class="text-4xl mt-8 lg:text-6xl font-extrabold tracking-tight text-black">
