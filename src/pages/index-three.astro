---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import GalleryEntry3 from "@/components/gallery/GalleryEntry3.astro";
// Content
import { getCollection } from "astro:content";
const allGallery = await getCollection("gallery");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-2">
      <div
        class=" grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-24 gap-8"
      >
        {allGallery.map((post) => <GalleryEntry3 post={post} />)}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
