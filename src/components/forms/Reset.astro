<section>
  <div class="flex items-center justify-center h-screen">
    <div class="w-full max-w-md px-8 mx-auto md:max-w-sm md:px-0 md:w-96">
      <h2 class="text-4xl font-medium tracking-tighter text-accent-900">
        Reset your password
      </h2>

      <form action="#" class="mt-12">
        <div class="mt-4 space-y-6">
          <div class="col-span-full">
            <label
              name="email"
              class="block mb-3 text-sm font-medium text-gray-600">
              Your email
            </label>
            <input
              type="email"
              autocomplete="off"
              placeholder="email@example.com"
              class="block w-full px-3 py-2 placeholder-gray-500 bg-white border border-transparent rounded-md appearance-none focus:outline-none focus:bg-white focus:border-accent-500 focus:ring-accent-500 sm:text-sm text-accent-500"
            />
          </div>
          <div class="col-span-full">
            <label
              name="company"
              class="block mb-3 text-sm font-medium text-gray-600">
              Password
            </label>
            <input
              type="password"
              class="block w-full px-3 py-2 placeholder-gray-500 bg-white border border-transparent rounded-md appearance-none focus:outline-none focus:bg-white focus:border-accent-500 focus:ring-accent-500 sm:text-sm text-accent-500"
              placeholder="Type password here..."
            />
          </div>
          <div class="col-span-full">
            <label
              name="company"
              class="block mb-3 text-sm font-medium text-gray-600">
              Confirm Password
            </label>
            <input
              type="password"
              class="block w-full px-3 py-2 placeholder-gray-500 bg-white border border-transparent rounded-md appearance-none focus:outline-none focus:bg-white focus:border-accent-500 focus:ring-accent-500 sm:text-sm text-accent-500"
              placeholder="Type password here..."
            />
          </div>
          <div class="col-span-full">
            <button
              type="submit"
              class="flex items-center justify-center w-full h-10 px-4 py-2 text-sm font-semibold text-white transition-all rounded-lg bg-gradient-to-b from-accent-500 hover:to-accent-700 to-accent-600">
              Reset password
            </button>
          </div>
          <div>
            <p class="text-sm font-medium leading-tight text-accent-900">
              Already have a password?
              <a
                class="ml-3 text-accent-500 hover:text-accent-400"
                href="/login">
                Log in instead
              </a>
            </p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
