---
export interface Props {
  prevUrl: string;
  nextUrl: string;
  prevText?: string;
  nextText?: string;
}

const {
  prevUrl,
  nextUrl,
  prevText = "Newer posts",
  nextText = "Older posts",
} = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <div class="flex flex-row mx-auto container mt-12 lg:mt-24 border-t pt-6">
      {prevUrl && (
        <a
          href={prevUrl}
          class="items-center text-white focus:outline-none inline-flex justify-center hover:text-accent-500 duration-200 focus-visible:outline-black focus-visible:ring-black font-medium lg:w-auto px-6 py-3 rounded-xl text-center w-full bg-accent-500 mr-auto hover:bg-accent-100"
        >
          {prevText}
        </a>
      )}
      {nextUrl && (
        <a
          href={nextUrl}
          class="items-center text-white focus:outline-none inline-flex justify-center hover:text-accent-500 duration-200 focus-visible:outline-black focus-visible:ring-black font-medium lg:w-auto px-6 py-3 rounded-xl text-center w-full bg-accent-500 ml-auto hover:bg-accent-100"
        >
          {nextText}
        </a>
      )}
    </div>
  )
}
