---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CtaTwo from "@/components/cta/CtaTwo.astro";
import Prose from "@/components/common/Prose.astro";
import { getFormattedDate } from "@/utils/utils";
import { getItemsFromCollection } from "@/utils/collections";
import UpdateHeader from "@/components/updates/UpdateHeader.astro";
export async function getStaticPaths() {
  const items = await getItemsFromCollection("updates");
  return items.map((item) => ({
    params: {
      slug: item.slug,
    },
    props: { item },
  }));
}
const { item } = Astro.props;
const { Content } = await item.render();
---

<BaseLayout>
  <UpdateHeader />
  <section>
    <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
      <div class="items-center max-w-2xl">
        <span class="text-xs font-bold tracking-wide uppercase text-purple-500">
          {item.category} - {getFormattedDate(item.publishedAt)}
        </span>
        <p
          class="mt-8 text-4xl font-semibold tracking-tight text-purple-900 hover:text-purple-500">
          {item.name}
        </p>
      </div>
      <div class="p-2 mt-12 overflow-hidden bg-white border rounded-3xl">
        <img
          class="relative object-cover w-full border shadow-2xl rounded-2xl"
          src={item.image.url}
          alt={item.image.alt}
        />
      </div>
      <div class="flex flex-col items-center max-w-3xl mx-auto mt-12">
        <Prose><Content /></Prose>
        <div
          class="flex flex-col items-center w-full gap-3 mt-10 sm:flex-row not-prose">
          <a
            class="flex items-center justify-center h-10 gap-3 px-4 py-2 text-sm font-semibold text-white transition-all rounded-lg bg-gradient-to-b from-purple-500 hover:to-purple-700 to-purple-600"
            href="#">
            <span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="icon icon-tabler icon-tabler-brand-twitter"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path
                  d="M22 4.01c-1 .49 -1.98 .689 -3 .99c-1.121 -1.265 -2.783 -1.335 -4.38 -.737s-2.643 2.06 -2.62 3.737v1c-3.245 .083 -6.135 -1.395 -8 -4c0 0 -4.182 7.433 4 11c-1.872 1.247 -3.739 2.088 -6 2c3.308 1.803 6.913 2.423 10.034 1.517c3.58 -1.04 6.522 -3.723 7.651 -7.742a13.84 13.84 0 0 0 .497 -3.753c0 -.249 1.51 -2.772 1.818 -4.013z">
                </path>
              </svg>
            </span>
            <span>Tweet</span>
          </a>
        </div>
      </div>
    </div>
  </section>
  <CtaTwo />
</BaseLayout>
