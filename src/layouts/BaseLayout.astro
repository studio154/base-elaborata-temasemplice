---
import BaseHead from "../components/global/BaseHead.astro"
const { title } = Astro.props;
---

<html lang="en">

    <head>
        <BaseHead title={title} />
        <link href="./src/styles/global.css" rel="stylesheet">

        <!---
            Mailgo: https://mailgo.dev/
        -->
        <script src="https://unpkg.com/mailgo@0.12.2/dist/mailgo.min.js"></script>
        <!---
            Robot Flex; Google font: https://fonts.google.com/betterspecimen/Roboto+Flex
        -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100;8..144,200;8..144,300;8..144,400;8..144,500;8..144,600;8..144,700;8..144,800;8..144,900;8..144,1000&amp;display=swap"
            rel="stylesheet">
    </head>

    <body class="bg-white">
        <slot />

        <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" crossorigin></script>
    </body>

</html>