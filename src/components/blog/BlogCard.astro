---
import { getFormattedDate } from "@/utils/utils";
const { post } = Astro.props;
---

<div class="group">
  <a href={"/" + post.collectionSlug + "/" + post.slug} class="h-full">
    <img
      class="aspect-[3/2] object-cover rounded-2xl hover:shadow-none shadow-md duration-200"
      loading="lazy"
      src={post.image.url}
      alt={post.image.alt}
    />
    <div class="flex flex-col items-start p-4">
      <div>
        <p class="text-xs text-gray-500">
          {getFormattedDate(post.publishedAt)}
        </p>
        <p class="mt-3 text-base font-medium text-purple-900">
          {post.name}
        </p>
        <p class="mt-2 text-sm text-gray-500 line-clamp-2">
          {post.excerpt}
        </p>
      </div>
      <div class="mt-6">
        <p class="text-xs font-medium text-purple-900">By {post.author}</p>
      </div>
    </div>
  </a>
</div>
