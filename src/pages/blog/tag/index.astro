---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getItemsFromCollection } from "@/utils/collections";

const allPosts = await getItemsFromCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.tags).flat())].map(
  (tagName) => {
    return {
      name: tagName,
      slug: tagName,
    };
  }
);
---

<BaseLayout>
  <section>
    <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
      <div class="relative items-center">
        <div class="w-full lg:inline-flex justify-between lg:items-center">
          <div class="max-w-xl">
            <span
              class="text-xs font-bold tracking-wide uppercase text-accent-500">
              Tags</span
            >
            <p
              class="text-4xl mt-8 font-extrabold tracking-tight text-accent-900">
              All tags
            </p>
          </div>
          <div class="mt-12 flex flex-col sm:flex-row lg:ml-auto">
            <a
              class="text-sm flex font-semibold items-center justify-center px-4 py-2 rounded-lg transition-all h-10 text-white bg-gradient-to-b from-accent-500 hover:to-accent-700 to-accent-600"
              href="/blog">See all posts &nbsp;&nbsp; â†’</a
            >
          </div>
        </div>
      </div>
      <div class="mt-12">
        <div class="mt-12 space-y-12 divide-y-2 divide-gray-100">
          {
            tags.map((tag) => (
              <div class="grid grid-cols-1 gap-4 pt-4 lg:grid-cols-4 items-end">
                <div class="lg:col-span-2">
                  <span class="text-accent-900 font-medium lg:text-xl text-lg">
                    {tag.name}
                  </span>
                </div>
                <div class="flex flex-col flex-shrink-0 mb-6 md:mb-0 lg:ml-auto col-span-2">
                  <a
                    href={"/blog/tag/" + tag.slug}
                    class="flex items-center justify-center w-12 h-12 text-accent-500 rounded-full bg-gray-50 hover:bg-gray-100 border">
                    <svg
                      fill="none"
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      class="w-4 h-4"
                      viewBox="0 0 24 24">
                      <path d="M5 12h14M12 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
