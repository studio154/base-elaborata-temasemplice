---
const { integration } = Astro.props;
---

<li>
  <a href={"/" + integration.collectionSlug + "/" + integration.slug}>
    <div
      class="h-full p-6 duration-200 bg-white hover:shadow-none rounded-2xl shadow-sm">
      <div>
        <div class="lg:inline-flex lg:items-center">
          <div>
            <img class="w-5" src={integration.image.url} alt="" />
          </div>
          <h3
            class="mt-6 text-base font-medium text-purple-900 lg:ml-3 lg:mt-0">
            {integration.name}
          </h3>
        </div>
        <p class="mt-2 text-sm text-gray-500">
          {integration.excerpt}
        </p>
      </div>
    </div>
  </a>
</li>
