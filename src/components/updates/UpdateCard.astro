---
import { getFormattedDate } from "@/utils/utils";
const { update } = Astro.props;
const { Content } = update;
---

<div class="mt-12 space-y-12 divide-y-2 divide-slate-100">
  <div class="grid grid-cols-1 gap-4 pt-4 lg:grid-cols-4 items-start">
    <div class="flex flex-col flex-shrink-0 mb-6 md:mb-0">
      <p>
        <span>{getFormattedDate(update.publishedAt)}</span>
        <span
          class="inline-flex ml-3 items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-sky-100 text-sky-800"
        >
          {update.category}
        </span>
      </p>
    </div>
    <div class="lg:col-span-3">
      <h2 class="text-lg font-medium leading-6 text-black">
        {update.name}
      </h2>
      <div class="prose">
        <Content />
      </div>
    </div>
  </div>
</div>
