---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Pagination from "@/components/blog/Pagination.astro";
import Card from "@/components/blog/BlogCard.astro";
import { getItemsFromCollection } from "@/utils/collections";

const allPosts = await getItemsFromCollection("posts");
const posts = allPosts.slice(0, 3);
const prevUrl = "";
const nextUrl = allPosts.length > 3 ? "/blog/page/2" : "";

const meta = {
  title: `Blog Home`,
  ogType: "blog",
};
---

<BaseLayout meta={meta}>
  <section>
    <div class="w-full px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl lg:py-32">
      <div class="text-center max-w-3xl mx-auto">
        <div>
          <span class="bg-accent-500/10 rounded-full py-1 px-4 w-auto">
            <span class="text-xs text-accent-500 uppercase font-semibold">
              blog
            </span>
          </span>
          <h1
            class="text-4xl mt-8 lg:text-9xl font-extrabold tracking-tight text-black"
          >
            Welcome to our blog
          </h1>
          <p class="text-base mt-4 text-slate-500 max-w-xl lg:mx-auto">
            Sit down and enjoy our blog post. We update the library daily with
            more and more blog entries that saciate you apetite of information.
          </p>
        </div>
      </div>
      <div
        class="mt-24 gap-x-8 gap-y-12 grid grid-cols-1 lg:gap-y-24 lg:grid-cols-3 sm:grid-cols-2"
        role="list"
      >
        {posts.map((post) => <Card post={post} />)}
      </div>
      <Pagination prevUrl={prevUrl} nextUrl={nextUrl} />
    </div>
  </section>
</BaseLayout>
