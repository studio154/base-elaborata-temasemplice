---
const { iframeSrc } = Astro.props;
---

<div
  class="inset-0 fixed overflow-y-auto z-10"
  role="dialog"
  :aria-labelledby="$id('modal-title')"
  aria-modal="true"
  x-id="['modal-title']"
  x-on:keydown.escape.prevent.stop="open = false"
  x-show="open"
  aria-labelledby="modal-title-1"
  style="display: none;"
>
  <div
    class="inset-0 fixed bg-black bg-opacity-50"
    x-show="open"
    x-transition.opacity=""
    style="display: none;"
  >
  </div>
  <div
    class="flex relative items-center justify-center min-h-screen p-4"
    x-show="open"
    x-on:click="open = false"
    x-transition=""
    style="display: none;"
  >
    <div
      class="w-full bg-dark p-4 rounded-3xl max-w-7xl overflow-y-auto relative shadow-3xl"
      x-on:click.stop=""
      x-trap.noscroll.inert="open"
    >
      <iframe class="w-full rounded-2xl aspect-video" src={iframeSrc}></iframe>
    </div>
  </div>
</div>
