---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import CtaTwo from "@/components/cta/CtaTwo.astro";

export async function getStaticPaths() {
  const items = await getCollection("integrations");
  return items.map((item) => ({
    params: {
      slug: item.slug,
    },
    props: { item },
  }));
}

const { data: item, render } = Astro.props.item;
const { Content } = await render();
---

<BaseLayout>
  <section>
    <div class="w-full px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl lg:py-32">
      <div class="max-w-xl">
        <div class="inline-flex items-center gap-3">
          <img class="w-12 h-12" src={item.image.url} alt={item.image.alt} />
          <h1 class="text-4xl font-extrabold tracking-tight text-black">
            {item.name}
          </h1>
        </div>
      </div>

      <div class="mt-12">
        <div class="mt-12 space-y-12 divide-y-2 divide-slate-100">
          <div class="grid grid-cols-1 pt-4 lg:grid-cols-4 gap-12 items-start">
            <div class="lg:col-span-3">
              <h2 class="text-black font-medium lg:text-xl text-lg">
                Overview
              </h2>
              <div class="prose"><Content /></div>
            </div>
            <div
              class="text-slate-500 flex flex-col flex-shrink-0 mb-6 md:mb-0"
            >
              <p class="text-black font-medium lg:text-xl text-lg">Details</p>
              <ul class="border-t space-y-3 mt-6 pt-6">
                <li class="inline-flex items-center justify-between w-full">
                  <span class="text-black text-base font-medium">Developer</span
                  >
                  <span class="text-slate-500 text-base">Semplice</span>
                </li>
                <li class="inline-flex items-center justify-between w-full">
                  <span class="text-black text-base font-medium">Category</span>
                  <span class="text-slate-500 text-base">
                    {item.category}
                  </span>
                </li>
                <li class="inline-flex items-center justify-between w-full">
                  <span class="text-black text-base font-medium">Website</span>
                  <span>
                    <a
                      class="text-base text-accent-500 hover:text-slate-500 first-letter:capitalize"
                      href={"https://" + item.companyURL}
                      target="_blank"
                    >
                      {item.companyURL}
                    </a>
                  </span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <CtaTwo />
</BaseLayout>
