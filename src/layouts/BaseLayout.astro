---
// Assets
import BigLogo from "@/components/assets/LogoElio.astro";
// Fundations
import "@/styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/Navigation.astro";
// Hides the big logo, navigation, or footer on selected screens by passing props:
// <BaseLayout hideBigLogo={true} hideNavigation={true} hideFooter={true}>

const { hideBigLogo = false, hideNavigation = false, hideFooter = false } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead />
  </head>
  <body class="flex flex-col bg-white min-h-svh">
    {
      !hideBigLogo && (
        <Wrapper variant="standard" class="pt-8">
          <BigLogo />
        </Wrapper>
      )
    }
    {!hideNavigation && <Navigation />}
    <main class="grow"><slot /></main>
    {!hideFooter && <Footer />}
  </body>
</html>
