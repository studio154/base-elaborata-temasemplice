---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Card from "@/components/integrations/IntegrationCard.astro";
import { getItemsFromCollection } from "@/utils/collections";

const integrations = await getItemsFromCollection("integrations");

const meta = {
  title: `Integrations`,
};
---

<BaseLayout meta={meta}>
  <section>
    <div class="w-full px-8 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl lg:py-32">
      <div class="max-w-xl mx-auto lg:text-center">
        <span
          class="bg-accent-50/50 border border-white/50 backdrop-blur-2xl rounded-full py-2 px-4 w-auto"
        >
          <span class="text-sm text-accent-500 uppercase font-semibold">
            integrations
          </span>
        </span>
        <p
          class="text-4xl mt-8 lg:text-6xl font-extrabold tracking-tight text-black"
        >
          Find an Integration
        </p>
        <p class="text-base text-slate-500 max-w-md lg:mx-auto lg:text-lg mt-8">
          Extend and automate your workflow by using integrations for your
          favorite tools.
        </p>
      </div>

      <ol
        role="list"
        class="grid grid-cols-1 sm:grid-cols-2 lg:mt-24 mt-12 gap-6 lg:grid-cols-3 list-none"
      >
        {integrations.map((integration) => <Card integration={integration} />)}
      </ol>
    </div>
  </section>
</BaseLayout>
