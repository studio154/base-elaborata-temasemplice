---
const { post } = Astro.props;
---

<div class="grid items-end grid-cols-1 gap-4 py-8 lg:grid-cols-4">
  <div class="lg:col-span-2">
    <span class="text-lg font-medium text-accent-900 lg:text-xl"
      >{post.name}</span
    >
    <p class="mt-6 text-base text-gray-500">
      {post.excerpt}
    </p>
  </div>
  <div class="flex flex-col flex-shrink-0 col-span-2 mb-6 md:mb-0 lg:ml-auto">
    <a
      href={"/" + post.collectionSlug + "/" + post.slug}
      class="flex items-center justify-center w-10 h-10 text-sm font-semibold transition-all bg-white border border-gray-300 rounded-lg text-accent-600 hover:text-accent-500">
      <svg
        class="w-4 h-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"></path></svg
      >
    </a>
  </div>
</div>
